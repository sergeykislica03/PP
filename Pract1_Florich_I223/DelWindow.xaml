<Window x:Class="Pract1_Florich_I223.DelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract1_Florich_I223"
        mc:Ignorable="d"
        Title="DelWindow" Height="800" Width="500">
    <Grid Background="#FFEAABA8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" FontSize="25" FontStyle="Italic" TextAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" FontFamily="Verdana" Margin="0,59,2,59"><Run Text="ФОРМА "/><Run Language="ru-ru" Text="УДАЛЕНИЯ"/><Run Text=" ЗАПИСЕЙ"/></TextBlock>
        <Button Click="AddProductButton_Click" x:Name="AddProductButton" Content="Удалить продукт" FontFamily="Verdana" FontSize="15" FontStyle="Italic" FontWeight="Bold" Margin="80,84,2,31" Foreground="Black" BorderBrush="#FF5F0202" Grid.Row="2" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF5050" Offset="0.783"/>
                    <GradientStop Color="#FF7D44FF"/>
                    <GradientStop Color="#FF00CAFF"/>
                    <GradientStop Color="#FFC54141" Offset="0.54"/>
                    <GradientStop Color="#FFFFCBC2"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Grid.Column="1" Click="BackButton_Click" x:Name="BackButton" Content="&lt;" FontFamily="Verdana" FontSize="15" FontStyle="Italic" FontWeight="Bold" Margin="0,84,302,31" Foreground="Black" BorderBrush="#FF5F0202" Grid.Row="2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF5050" Offset="0.783"/>
                    <GradientStop Color="#FF7D44FF"/>
                    <GradientStop Color="#FF00CAFF"/>
                    <GradientStop Color="#FFC54141" Offset="0.54"/>
                    <GradientStop Color="#FFFFCBC2"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
